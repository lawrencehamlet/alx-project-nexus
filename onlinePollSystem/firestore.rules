 rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns a resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Polls collection
    match /polls/{pollId} {
      // Anyone can read polls
      allow read: if true;
      
      // Anyone can create polls (for testing - remove in production)
      allow create: if true;
      
      // Anyone can update polls (for voting)
      allow update: if true;
      
      // Anyone can delete polls (for testing - remove in production)
      allow delete: if true;
    }
    
    // Votes collection
    match /votes/{voteId} {
      // Users can only read their own votes
      allow read: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
      
      // Users can create votes (one per poll enforced by app logic)
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.pollId is string
        && request.resource.data.optionId is string
        && request.resource.data.votedAt is timestamp;
      
      // Votes cannot be updated or deleted
      allow update: if false;
      allow delete: if false;
    }
    
    // Users collection (optional - for storing user profiles)
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      
      // Users can create/update their own profile
      allow write: if isOwner(userId);
    }
  }
}